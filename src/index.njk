---
title: "Home"
---

{% extends "layout/layout.njk" %}
{% block main %}
  <div class="container mx-auto">
    {% include "components/hero.njk" %}
    {% include "components/experience.njk" %}
    {% include "components/skills.njk" %}
    <div class="pb-20">
      <div class="pb-20">
        <h2 class="sm:text-2xl text-xl font-medium mb-8">Featured Works üï∏Ô∏è</h2>
        <div class="grid lg:grid-cols-2 grid-cols-1 xl:gap-16 gap-8">
          {%- for work in collections.featuredWork | reverse -%}
            <div>
              <a href="{{ work.data.link }}" title="{{ work.data.title }}">
                {% image work.data.img, work.data.title, "img-transition", ["900, 600"] %}
              </a>
              <div class="mt-6">
                <a href="{{ work.data.link }}" class="cursor-pointer text-xl font-semibold text-gray-900 dark:text-white flex items-center base-transition text-transition">{{ work.data.title }}</a>
                <p class="text-base font-normal text-gray-500 dark:text-gray-400">
                  {% for type in work.data.types | join(", ") -%}
                    {{ type }}
                  {%- endfor %}
                </p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <div>
        <a
          href="/works"
          class="inline-flex items-center px-4 py-2 text-base font-medium text-gray-900 bg-white border border-gray-200 rounded-lg
            hover:bg-gray-100 hover:text-green-500 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100
            focus:text-green-500 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:text-green-500
            dark:hover:bg-gray-700 dark:focus:ring-gray-700">
          View more works
          <svg
            class="w-3 h-3 ms-2 rtl:rotate-180"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 10">
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 5h12m0 0L9 1m4 4L9 9"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
{% endblock main %}